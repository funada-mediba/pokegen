user www-data;
worker_processes auto;
pid /run/nginx.pid;

events {
    worker_connections 768;
    multi_accept       on;
    use                epoll;
}

http {
    sendfile            on;
    tcp_nopush          on;
    tcp_nodelay         on;
    types_hash_max_size 2048;
    server_tokens       off;
    etag                off;
    include             /etc/nginx/mime.types;
    default_type        text/html;
    open_file_cache     max=1000;

    client_max_body_size          10m;
    server_names_hash_bucket_size 64;
    server_name_in_redirect       off;
    reset_timedout_connection     on;

    keepalive_timeout   65;
    keepalive_requests  100000;

    ##
    # SSL Settings
    ##

    ssl_protocols             TLSv1 TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers on;
    ssl_ciphers               ECDHE+RSAGCM:ECDH+AESGCM:DH+AESGCM:ECDH+AES256:DH+AES256:ECDH+AES128:DH+AES:!EXPORT:!DES:!3DES:!MD5:!DSS;
    ssl_certificate           /etc/nginx/ssl/server.crt;
    ssl_certificate_key       /etc/nginx/ssl/server.key;
    ssl_session_cache         shared:SSL:10m;
    ssl_session_timeout       10m;

    ##
    # Logging Settings
    ##

    log_format main '$remote_addr [$time_local] "$request" $status '
                    '$body_bytes_sent "$http_referer" "$http_user_agent" '
                    '$upstream_cache_status $upstream_response_time '
                    '$request_time';
    log_format ltsv 'domain:$host\t' 'host:$remote_addr\t'
                    'time:$time_local\t'
                    'method:$request_method\t'
                    'path:$request_uri\t'
                    'protocol:$server_protocol\t'
                    'status:$status\t'
                    'size:$body_bytes_sent\t'
                    'referer:$http_referer\t'
                    'agent:$http_user_agent\t'
                    'response_time:$request_time\t'
                    'cookie:$http_cookie\t'
                    'set_cookie:$sent_http_set_cookie\t'
                    'upstream_addr:$upstream_addr\t'
                    'upstream_cache_status:$upstream_cache_status\t'
                    'upstream_response_time:$upstream_response_time';
    access_log /var/log/nginx/access.log ltsv;
    error_log  /var/log/nginx/error.log;

    ##
    # Gzip Settings
    ##

    gzip              on;
    gzip_disable      "msie6";
    gzip_vary         on;
    gzip_proxied      any;
    gzip_comp_level   6;
    gzip_buffers      16 8k;
    gzip_http_version 1.1;
    gzip_types        text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript image/svg+xml;

    ##
    # Fastcgi Cache Configs
    ##

    fastcgi_cache_path           /var/cache/nginx/fastcgi levels=1:2 keys_zone=FASTCGI:10m max_size=1g;
    fastcgi_cache_valid          10m;
    fastcgi_buffers              256 16k;
    fastcgi_buffer_size          128k;
    fastcgi_connect_timeout      2s;
    fastcgi_send_timeout         5s;
    fastcgi_read_timeout         5s;
    fastcgi_busy_buffers_size    256k;
    fastcgi_temp_file_write_size 256k;
    fastcgi_cache_use_stale      updating;

    ##
    # Proxy Cache Configs
    ##

    proxy_cache_path           /var/cache/nginx/proxy levels=1:2 keys_zone=PROXY:10m max_size=1g;
    proxy_cache_valid          10m;
    proxy_buffers              256 16k;
    proxy_buffer_size          128k;
    proxy_connect_timeout      10s;
    proxy_send_timeout         5s;
    proxy_read_timeout         5s;
    proxy_busy_buffers_size    256k;
    proxy_temp_file_write_size 256k;
    proxy_cache_use_stale      updating;

    ##
    # Real Ip Configs
    ##

    real_ip_header    X-Forwarded-For;
    real_ip_recursive on;
    set_real_ip_from  0.0.0.0/0;

    ##
    # Resolver Configs
    ##

    resolver         {{ WEB_RESOLVER }};
    resolver_timeout 2s;

    ##
    # Php Configs
    ##

    upstream php-fpm {
        server unix:/var/run/php5-fpm.sock;
    }

    ##
    # Access Configs
    ##

    allow 127.0.0.1;
    allow {{ PRIVATE_SUBNET }};
    allow {{ MEDIBA_OFFICE }};
    deny all;

    ##
    # Virtual Host Configs
    ##

    include /etc/nginx/conf.d/*.conf;
    include /etc/nginx/sites-enabled/*;
}
